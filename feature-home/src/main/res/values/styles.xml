<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FilterDoneButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@color/orange</item>
    </style>

    <style name="FilterCancelButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@color/dark_blue</item>
    </style>

    <style name="CategoryTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="ExtraTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CarouselTextStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sf_pro</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CarouselButtonStyle" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/sf_pro</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="ToolbarTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="HeaderTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

</resources>