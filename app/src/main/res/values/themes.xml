<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EcommerceApp" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:colorBackground">@color/white_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white_background</item>
        <!--        Customize your theme here.-->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">@color/white_background</item>
        <item name="fontFamily">@font/mark_pro</item>
    </style>


    <!-- Custom view styles -->


    <style name="ToolbarTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="HeaderTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="CarouselTextStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sf_pro</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ExtraTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CarouselButtonStyle" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/sf_pro</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="BottomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:padding">0dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@color/orange</item>
    </style>

    <style name="FilterDoneButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@color/orange</item>
    </style>

    <style name="FilterCancelButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@color/dark_blue</item>
    </style>

    <style name="CategoryTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="TabTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TabTextBoldStyle">
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CapacityRadioButtonStyle">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/selector_capacity</item>
        <item name="android:button">@color/transparent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@drawable/selector_capacity_text</item>
    </style>

    <style name="ColorRadioButtonStyle">
        <item name="android:layout_width">@dimen/rb_detail_color</item>
        <item name="android:layout_height">@dimen/rb_detail_color</item>
        <item name="android:button">@color/transparent</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/circle_bg</item>
        <item name="backgroundTint">@color/gray</item>
        <item name="android:drawableEnd">@drawable/ic_tick</item>
        <item name="android:paddingEnd">11dp</item>
        <item name="drawableTint">@drawable/selector_detail_color</item>
    </style>

    <style name="ShopTabTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray2</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>