<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.app.ecommerceapp.features.home.presentation.screens.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_mainFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
        <action
            android:id="@+id/action_mainFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_mainFragment_to_filterFragment"
            app:destination="@id/filterFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.app.ecommerceapp.features.detail.presentation.screens.DetailFragment"
        android:label="DetailFragment"
        tools:layout="@layout/fragment_detail">
        <action
            android:id="@+id/action_detailFragment_to_mainFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_detailFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
    </fragment>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.app.ecommerceapp.features.cart.presentation.screens.CartFragment"
        android:label="CartFragment"
        tools:layout="@layout/fragment_cart">
        <action
            android:id="@+id/action_cartFragment_to_mainFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <dialog
        android:id="@+id/filterFragment"
        android:name="com.app.ecommerceapp.features.home.presentation.screens.FilterFragment"
        android:label="FilterFragment"
        app:enterAnim="@anim/slide_up"
        app:exitAnim="@anim/slide_down"
        tools:layout="@layout/fragment_filter">
        <action
            android:id="@+id/action_filterFragment_to_mainFragment"
            app:destination="@id/homeFragment" />
    </dialog>

</navigation>